<div class="container">

        <p id="notice"></p>


      	<h2>User info</h2>

<div class="edit_user">
<%= form_for(@user) do |f| %>
<% if f.object.errors.any? %>
  <div class="alert alert-warning">
    <h3><%= pluralize(f.object.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <% end %>

  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit 'Update User', class:"btn-sm btn-success" %>
  </div>
  <% end %>
</div>
      </div>