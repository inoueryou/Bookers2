
<br>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'books/list', user: @user, book: @book %>

<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-hover table-inverse">
<thead>
<tr>
<th></th>
<th>title</th>
<th>Opinion</th>
</tr>
</thead>

<tbody>
<% @user.books.each do |book| %>
<tr>
<td>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", format: 'jpeg', class: "profile-img" %>
</td>

<td>
<%= link_to book.title, book_path(book.id) %>
</td>

<td>
<%= book.body %>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
</div>
