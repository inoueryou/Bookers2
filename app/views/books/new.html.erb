<h1>New book</h1>
<%= form_for(@book,url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h4>Title</h4>
        <%= f.text_field :title %>
<h4>Opinion</h4>
      <%= f.text_area :body %>
  <br><%= f.submit "Create Book", class:"btn btn-primary" %>
<% end %>