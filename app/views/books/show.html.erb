<br>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'books/list', user: @user, book: @books %>


<div class="col-xs-9">
		<h2>Book detail</h2>
<table class="table">
	<tbody>
	    <tr>
	    	<td>
	    		<%= link_to user_path(@user.id) do %>
	    		<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", format: 'jpeg', class: "profile-img" %>
	    	<br>
            <%= @book.user.name %>
            <% end %>
            </td>
          	<td><%= @book.title %></td>
         	<td><%= @book.body %></td>

          	<% if @book.user == current_user %>
          	<td><%= link_to "Edit", edit_book_path(@book.id), class:"btn-sm btn-success" %></td>
          	<td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %></td>
          	<% end %>
        </tr>
    </tbody>
</table>
  </div>
</div>
</div>
</div>